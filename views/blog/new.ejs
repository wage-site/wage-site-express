                <h1 class="greennature-page-title">Adauga postare noua!</h1>
                <span class="greennature-page-caption">W.A.G.E. NEWS</span>
            </div>
        </div>
        <!-- is search -->
        <div class="content-wrapper space d-flex justify-content-center m-5">
            <div class="greennature-content formDiv">


                <form action="/blog" method="POST" enctype="multipart/form-data">
                    <div class="imgcontainer">
                      <img src="../../images/wagecn.png" alt="Avatar" class="avatar">
                    </div>
                  
                    <div class="container">
                      <label for="Title"><b>Titlul postarii</b></label>
                      <input type="text" id="title" name="blog[title]" required>

                      <label for="Author"><b>Autorul postarii</b></label>
                      <input type="text" id="author" name="blog[author]" placeholder="WAGE Reporter / 'Daca este publicatie straina numele ei'" required>

                      <label for="Category"><b>Categoria</b></label>
                      <input type="text" id="category" name="blog[category]" placeholder="Ex. Harta poluarii / Evenimente" required>

                      <div class="row">
                        <div class="col">
                            <label for="Day"><b>Ziua</b></label>
                            <input type="text" id="day" name="blog[day]" placeholder="Ziua trebuie in cifre (Ex. 02)" required maxlength="2">
                        </div>
                        <div class="col">
                            <label for="Month"><b>Luna</b></label>
                            <input type="text" id="month" name="blog[month]" placeholder="Doar primele 3 litere ale lunii" required maxlength="3">
                        </div>
                      </div>

                      <label for="Preview"><b>Scurta descriere</b></label>
                      <textarea  id="description" name="blog[preview]" placeholder="Primul paragraf din articol/250 caractere" required maxlength="250"></textarea>
                  
                      <label for="description"><b>Descriere si imagini</b></label>
                      <textarea  id="description" name="blog[description]" placeholder="Tot articolul inclusiv paragraful pus la 'Scurta descriere'" required></textarea>

                      <div class="input-group mb-3">
                        <input type="file" class="form-control" name="image" id="image" multiple>
                    </div>
                          
                      <button>Adauga postarea</button>
                    </div>
            </div>
            <!-- greennature-content -->
            <div class="clear"></div>
        </div>
