                        <div class="clear"></div>
                        <div class="textwidget"><span class="clear"></span><span class="greennature-space" style="margin-top: -6px; display: block;"></span><i class="fab fa-instagram"></i> @wage_team_cndg

                            <span class="clear"></span><span class="greennature-space" style="margin-top: 10px; display: block;"></span>

                            <i class="fab fa-facebook"></i> WAGE Team
                        </div>
                    </div>
                </div>
                <div class="footer-column three columns" id="footer-widget-3">
                    <div id="gdlr-recent-post-widget-5" class="widget widget_gdlr-recent-post-widget greennature-item greennature-widget">
                        <h3 class="greennature-widget-title">Recente</h3>
                        <div class="clear"></div>
                        <div class="greennature-recent-post-widget">
                            <% for(let i=blogPosts.length - 1; i >= blogPosts.length - 2; i--) {%>
                                <div class="recent-post-widget">
                                    <div class="recent-post-widget-thumbnail">
                                        <a href="/blog/<%= blogPosts[i]._id %> "><img src="<%= blogPosts[i].image[0].url %>" alt="" width="150" height="150" /></a>
                                    </div>
                                    <div class="recent-post-widget-content">
                                        <div class="recent-post-widget-title"><a href="/blog/<%= blogPosts[i]._id %> "><%= blogPosts[i].title %> </a></div>
                                        <div class="recent-post-widget-info">
                                            <div class="blog-info blog-date greennature-skin-info"><i class="fa fa-clock-o"></i><a href="/blog/<%= blogPosts[i]._id %>  ">21 Mar 2014</a></div>
                                            <div class="clear"></div>
                                        </div>
                                    </div>
                                    <div class="clear"></div>
                                </div>
                                <% } %> 
                            <div class="clear"></div>
                        </div>
                    </div>
                </div>
